import = [
    "~/.config/alacritty/themes/themes/tokyo-night.toml"
]
[env]
TERM = "xterm-256color"

[font]
size = 8.0

[font.bold]
family = "MesloLGS Nerd Font Mono"
style = "Bold"

[font.bold_italic]
family = "MesloLGS Nerd Font Mono"
style = "Bold Italic"

[font.italic]
family = "MesloLGS Nerd Font Mono"
style = "Italic"

[font.normal]
family = "MesloLGS Nerd Font Mono"
style = "Regular"

[window]
padding.x = 6
padding.y = 6
opacity = 0.8
startup_mode = "Maximized"
decorations = "None"
